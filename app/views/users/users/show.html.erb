<div class="container">
    <div class="row">
        <div class="col-3">
            <h3>ユーザー情報</h3>
            <table class="table">
                <tr>
                    <th>ニックネーム</th>
                    <th><%= current_user.nickname %></th>
                </tr>
                <tr>
                    <th>自己紹介</th>
                    <th><%= current_user.introduction %></th>
                </tr>
            </table>
            <% if @user == current_user %>
              <p><%= link_to "編集する", edit_users_user_path(@user), class: "btn-lg btn-success edit_store_#{@user_id}" %></p>
            <% end %>
        </div>
        <div class="col-9">
            <h1>作りたいリスト</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>画像</th>
                        <th>料理名</th>
                    </tr>
                </thead>
                <tbody>
                    <% @interests.each do |interest| %>
                        <tr>
                              <td><%= link_to users_recipe_path(interest.recipe) do %>
                                    <%= attachment_image_tag interest.recipe, :image,fallback: "no_image.jpg",size: "200x200"%>
                                  <% end %>
                              </td>
                              <td><%= interest.recipe.name %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class ="row">
            <div class="col-12">
            <h1>投稿レシピ</h1>
                <table class="table">
	                  <thead>
                        <tr>
                            <th>画像</th>
                            <th>料理名</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @recipes.each do |recipe| %>
                            <tr>
 	                              <td><%= link_to users_recipe_path(recipe) do %>
                                        <%= attachment_image_tag recipe, :image,fallback: "no_image.jpg",size: "200x200"%>
                                    <% end %>
                                </td>
 	                              <td><%= recipe.name %></td>
                            </tr>
                        <% end %>
 	                  </tbody>
                </table>
            </div>
        </div>
    </div>
</div>