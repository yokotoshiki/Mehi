<div class="container">
    <div class="col text-center">
        <h1>ユーザー情報</h1>
        <table class="table">
            <tr>
                <th>名前</th>
                <th><%= current_user.nickname %></th>
            </tr>
            <tr>
                <th>自己紹介</th>
                <th><%= current_user.introduction %></th>
            </tr>
        </table>

            <% if @user == current_user %>
                  <p><%= link_to "編集する", edit_users_user_path(current_user), class: "btn-lg btn-success" %></p>
                <% end %>
                <h1>ユーザー一覧</h1>
        <table class="table">
	         <thead>
                <tr>
                    <th>投稿者</th>
                    <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                <tr>
 	                <td><%= user.nickname %></td>
 	                <td><%= link_to "Show", users_user_path(current_user.id) %></td>
                </tr>
            <% end %>
 	        </tbody>
        </table>
    </div>
</div>