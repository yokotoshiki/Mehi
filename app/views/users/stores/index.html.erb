<div class="col text-center">
    <div class="store-picup">
        <h1>レシピ一覧</h1>
    	<% @stores.each do |store| %>
    	  <div class = "store-box">
    	  	<div class = "image-box">
    	  		<%= link_to users_store_path(store) do %>
    	  		  <%= attachment_image_tag store, :image,fallback: "no_image.jpg",size: "200x200"%>
    	  		<% end %>
    	  	</div>
    	  	<p><%= store.name %></p>
    	  </div>
    	<% end %>
    </div>
</div>