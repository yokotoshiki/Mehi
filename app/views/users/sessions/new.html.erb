<section class="inner">
 <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="user_info user_login">
      <thead>
        <th></th>
        <th></th>
      </thead>
      <tboby>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr>
          <td><%= f.label :password, "パスワード" %></td>
          <td><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>

        <tr>
          <% if devise_mapping.rememberable? %>
            <td><%= f.check_box :remember_me %>
            <%= f.label :remember_me, "次回から自動ログイン" %></td>
        </tr>
        <% end %>
        <tr>
          <td></td>
          <td><%= f.submit "ログイン", class: "btn btn-rrimary" %></td>
        </tr>
      </tboby>
    </table>
  <% end %>

 <h2>登録がお済みでない方</h2>
 <p><%= link_to "こちら", new_user_registration_path %>から新規登録を行なってください</p>
</section>
