<div class="col text-center">
	<h1><%= @ingredient.name %>詳細</h1>
	<table class="table table-hover ">
        <tbody>
	        <tr>
	    	    <td>食材名</td>
	    	    <td><%=@ingredient.name %></td>
	        </tr>
	        <tr>
	    	    <td>カテゴリ</td>
	    	    <td><%= @ingredient.ingredient_category.name %></td>
	        </tr>
	        <tr>
	    	    <td>数量</td>
	    	    <td><%= @ingredient.quanitiy %></td>
	        </tr>
	        <tr>
	    	    <td>登録日</td>
	    	    <td><%= @ingredient.created_at.strftime('%Y-%m-%d') %></td>
	        </tr>
	        <tr>
	    	    <td>賞味期限</td>
	    	    <td><%= @ingredient.expiration_date %></td>
	        </tr>
	        <tr>
	    	    <td rowspan="3">メモ</td>
	    	    <td rowspan="3"><%= @ingredient.note %></td>
	        </tr>
	    </tbody>
	</table>
</div>