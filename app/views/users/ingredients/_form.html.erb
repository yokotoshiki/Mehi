<%= form_for(ingredient, url: url) do |f| %>
  <%= render 'layouts/error_messages', resource: ingredient %>
  <div class="col text-center">
    <table class="table">
        <tbody>
            <tr>
	    	    <td><%= f.label :name, "食材名" %></td>
	    	    <td><%= f.text_field :name %></td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :quanitiy, "数量" %></td>
	    	    <td><%= f.text_field :quanitiy %></td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :expiration_date, "賞味期限" %></td>
	    	    <td><%= f.date_select(:expiration_date,use_month_numbers: true) %></td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :ingredient_category_id, "カテゴリ" %></td>
	    	    <td><%= f.collection_select :ingredient_category_id, IngredientCategory.all, :id, :name,{prompt: '選択してください'} %></td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :note, "メモ" %></td>
	    	    <td><%= f.text_area :note,size:"50x5" %></td>
	        </tr>
	    </tbody>
	</table>
	<%= f.submit submit, class:"btn btn-lg btn-primary" %>
  </div>
<% end %>