<div class="jumbotron jumbotron-fluid">
    <div class="container">
      <div class="col text-center">
        <div class="main-visual">
            <div class="main-visual-text">
                <% if user_signed_in? %>
                    <h1>ようこそ<strong><%= current_user.name %>さん！</strong></h1>
                <% else %>
                    <h1>ようこそ<strong>Mehiへ</strong></h1>
                    <%= link_to  '初めて利用される方',users_recipes_about_path  %></br>
                    <div class="btn-group" role="group">
                        <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary" %>
                        <%= link_to "ログイン", new_user_session_path,class: "btn btn-success" %>
                    </div>
                <% end %>
            </div>
        </div>
      </div>
    </div>
</div>
<div class="col text-center">
    <h2>新着レシピ</h2>
    <div class="recipe-picup">
        <% @recipes.each do |recipe| %>
          <div class = "info-box">
            <div class = "image-box">
                <%= link_to users_recipe_path(recipe) do %>
                  <%= attachment_image_tag recipe, :image,fallback: "no_image.jpg",size: "200x200" %>
                <% end %>
                </div>
                <p><%= recipe.name %></p>
            </div>
        <% end %>
    </div>
    <%= link_to "もっと見る", users_recipes_path %>
</div>





