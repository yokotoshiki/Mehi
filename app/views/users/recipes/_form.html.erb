<%= form_for(recipe, url: url) do |f| %>
 <div class="col text-center">
  	<div class="recipe_image">
	  	<%= f.label :image, "料理画像" %></br>
	  	<%= attachment_image_tag recipe, :image, id: "img_prev", fallback: "no_image.jpg",size: "300x300" %></br>
	  	<%= f.attachment_field :image %>
    </div>


    <table class="table">
        <tbody>
            <tr>
	    	    <td><%= f.label :name, "料理名" %></td>
	    	    <td><%= f.text_field :name %></td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :explanation, "作り方" %></td>
	    	    <td><%= f.text_area :explanation, size:"100x10" %></td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :ingredient, "材料" %></td>
	    	    <td><%= f.text_area :ingredient,size:"100x5" %></td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :seasoning, "調味料" %></td>
	    	    <td><%= f.text_area :seasoning,size:"100x5" %></td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :time, "調理時間" %></td>
	    	    <td>おおよそ　<%= f.text_field :time %>　分</td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :quanitiy, "分量" %></td>
	    	    <td><%= f.text_field :quanitiy %>　人分</td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :price, "価格" %></td>
	    	    <td>おおよそ　<%= f.text_field :price %>　円</td>
	        </tr>
	        <tr>
	    	    <td><%= f.label :recipe_category_id, "カテゴリ" %></td>
	    	    <td><%= f.collection_slect :recipe_category_id, RecipeCategory.all, :id, :name,{prompt: '選択してください'} %></td>
	        </tr>
	    </tbody>
	</table>
	<%= f.submit submit, class:"btn btn-lg btn-primary" %>
  </div>
<% end %>
