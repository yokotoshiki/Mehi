<div class="col text-center">
    <div class="recipe-picup">
        <h1>レシピ一覧</h1>
    	<% @recipes.each do |recipe| %>
    	  <div class = "recipe-box">
    	  	<div class = "image-box">
    	  		<%= link_to users_recipe_path(recipe) do %>
    	  		  <%= attachment_image_tag recipe, :image,fallback: "no_image.jpg",size: "200x200"%>
    	  		<% end %>
    	  	</div>
    	  	<p><%= recipe.name %></p>
    	  </div>
    	<% end %>
    </div>
</div>
