<div class="container">
	<div class="row">
	    <div class="col-12">
			 <div class="col text-center">
			 	<div class="ingredient">
					<% @recipes.each do |recipe| %>
			    	  		<%= link_to users_recipe_path(recipe) do %>
			    	  		  <%= attachment_image_tag recipe, :image,fallback: "no_image.jpg",size: "400x400"%>
			    	  		<% end %>
			    	  	<div><%= recipe.name %></div>
					      <% if recipe.interested_by?(current_user) %>
				              <%= link_to users_recipe_interests_path(recipe), method:  :delete do %>
				                <i class="far fa-star" aria-hidden="true" style="color: #FFD700;"></i>登録済み</br>
				              <% end %>
				          <% else %>
				              <%= link_to users_recipe_interests_path(recipe), method: :post do %>
				                <i class="fas fa-plus" aria-hidden="true"></i>作ってみたい</br>
				              <% end %>
				         <% end %>
			    	<% end %>
			    	<%= link_to "他のレシピ表示",users_recipes_collections_path, class:"btn btn-lg btn-primary"%>
			    	<%= link_to "マイページ",users_user_path(current_user.id), class:"btn btn-lg btn-secondary"%>
			    </div>
	         </div>
	    </div>
	</div>
</div>
